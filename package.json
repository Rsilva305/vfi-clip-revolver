{
  "name": "vfi-clip-revolver",
  "version": "1.0.0",
  "description": "A video clip management and concatenation tool",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "setup": "npm install && npm install -g pm2",
    "deploy": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop vfi-clip-revolver",
    "restart": "pm2 restart vfi-clip-revolver"
  },
  "dependencies": {
    "express": "^4.21.2",
    "fluent-ffmpeg": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}